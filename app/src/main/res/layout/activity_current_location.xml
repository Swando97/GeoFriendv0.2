<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitedLandmarksActivity"
    android:alpha="0.90"
    android:background="@drawable/bluegradient">

    <LinearLayout
        android:id="@+id/currentLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listViewLocationsTitle"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:fontFamily="@font/aldrich"
            android:gravity="fill_vertical"

            android:shadowColor="#000000"
            android:shadowDx="1.9"
            android:shadowDy="1.9"
            android:shadowRadius="2.0"
            android:textColor="#D1CFCF"

            android:text="Landmarks"
            android:textAlignment="center"

            android:textSize="36sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listViewLocations"
            android:layout_width="wrap_content"
            android:layout_height="492dp"
            android:background="#BC62BC50"
            android:backgroundTint="#B062C552"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>